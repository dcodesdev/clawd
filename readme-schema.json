{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "README.mdx Frontmatter Schema",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "version",
    "category",
    "author",
    "repo",
    "path"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+/[a-z0-9-]+$",
      "description": "Skill ID in format <author>/<skill-name>"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable skill title"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Brief description of the skill"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "category": {
      "type": "string",
      "enum": [
        "Development",
        "DevOps",
        "Writing",
        "QA",
        "Security",
        "Data",
        "Design",
        "Other"
      ],
      "description": "Skill category"
    },
    "author": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Author ID referencing authors.json"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Array of contributor IDs referencing authors.json"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of tags for categorization"
    },
    "created_at": {
      "type": "string",
      "description": "Creation date (YYYY-MM-DD or ISO 8601)"
    },
    "updated_at": {
      "type": "string",
      "description": "Last update date (YYYY-MM-DD or ISO 8601)"
    },
    "requirements": {
      "type": "object",
      "properties": {
        "bash_version": {
          "type": "string"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "license": {
      "type": "string",
      "description": "License identifier (e.g., MIT, Apache-2.0)"
    },
    "repo": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+/[a-zA-Z0-9_.-]+$",
      "description": "GitHub repository in owner/repo format"
    },
    "path": {
      "type": "string",
      "description": "Directory path within the repository"
    },
    "ref": {
      "type": "string",
      "description": "Branch, tag, or commit reference (optional, defaults to repo default branch)"
    }
  },
  "additionalProperties": false
}
